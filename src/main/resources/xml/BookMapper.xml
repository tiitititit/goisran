<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.college.yi.bookmanager.repository.BookRepository">

  <select id="findAll" resultType="com.college.yi.bookmanager.entity.BookEntity">
    SELECT * FROM books
  </select>
  
   <select id="findById" parameterType="long" resultType="com.college.yi.bookmanager.entity.BookEntity">
    SELECT * FROM books WHERE id = #{id}
  </select>

  <insert id="insert" parameterType="com.college.yi.bookmanager.entity.BookEntity">
    INSERT INTO books (title, author, publisher, published_date, stock)
    VALUES (#{title}, #{author}, #{publisher}, #{publishedDate}, #{stock})
  </insert>

  <update id="update" parameterType="com.college.yi.bookmanager.entity.BookEntity">
    UPDATE books 
    SET title = #{title}, author = #{author}, publisher = #{publisher}, published_date = #{publishedDate}, stock = #{stock}
    WHERE id = #{id}
  </update>

  <delete id="delete" parameterType="long">
    DELETE FROM books WHERE id = #{id}
  </delete>

</mapper>
